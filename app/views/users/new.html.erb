<div class="container">


         <div class="col-lg-3"></div>
          <div class="col-lg-6">
            <div class="well">

                <fieldset>
                  <legend>Sign Up</legend>

                  <%= form_for :user, :url => { :action => "create" }, html: { class: "bs-example form-horizontal"} do |f| %>

                  <div class="form-group">
                    <div class="col-lg-2">
                    <%= f.label :name, :input_html => { :class => "col-lg-2 control-label" } %>
                  </div>
                    <div class="col-lg-10">
                    <%= f.text_field :name, :required => true, :input_html => { :class => "form-control" } %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-lg-2">
                    <%= f.label :email, :input_html => { :class => "col-lg-2 control-label" } %>
                  </div>
                    <div class="col-lg-10">
                    <%= f.text_field :email, :required => true, :input_html => { :class => "form-control" } %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-lg-2">
                    <%= f.label :password, :input_html => { :class => "col-lg-2 control-label" } %>
                  </div>
                    <div class="col-lg-10">
                    <%= f.password_field :password, :required => true,:input_html => { :class => "form-control" } %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                      <%= f.submit "Sign Up!", :id => "signup" %>
                    </div>
                  </div>

                <% end %>

                </fieldset>

            </div>
          </div>
          <div class="col-lg-3"></div>
        </div>
</div>
