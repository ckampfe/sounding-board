<div class="container">

  <%= form_for :user, :url => { :action => "create" } do |f|%>
    <%= f.label :name %>:
    <%= f.text_field :name %><br>

    <%= f.label :email %>:
    <%= f.text_field :email %><br>

    <%= f.label :password %>:
    <%= f.password_field :password %><br>

    <%= f.submit "Sign Up!", :id=> "signup" %>
  <% end %>

</div>