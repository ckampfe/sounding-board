<!DOCTYPE html>
<html>
<head>
  <title>SoundingBoard</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class = "nav_bar">


    <% if session[:current_user_id] != nil %>
      <li><a class='align-center title' href='/'>Sounding Board</a></li>
      <%= form_for :user, :url => { :action => "logout", :controller => "users" } do |f| %>
      <li><a><%= f.submit "Logout", :id=> "logout" %></a></li>
      <li><a class='align-right nav-link' <%= link_to("Create Post", posts_new_path) %> ></a></li>
      <li><a class='align-right nav-link' <%= link_to("My Post", my_posts_path) %> ></a></li>
      <% end %>
    <% else %>
    <li><a class='align-center title' href='/'>Sounding Board</a></li>
      <li><a class='align-right nav-link' <%= link_to("Login", login_path) %> ></a></li>
     <li><a class='align-right nav-link'<%= link_to("Sign Up", new_user_path) %> ></a></li>
    <% end %>
  </div>

<%= yield %>


</body>

