<div class="container">
  <!-- <h1>Sounding Board</h1> -->
  <div class="row">
    <div class="col-lg-12"><!-- full page spacing using 1 column-->
      <h2>Share a song</h2>
      <p> Enter the song, artist, or album you'd like to post, give your post a title, and if you like, enter what motivates you to share the music in this post.</p>
      <p> When you click submit, you'll be offered the top ten matching titles for your song.</p>
    </div><!-- end of full page column -->
  </div><!-- end of row -->

  <div class="row"><!-- adding 3 columns here, left and right will be empty to center content in middle-->
    <div class="col-lg-3"></div><!-- left page spacing using columns-->

    <div class="col-lg-6"><!-- main content space on page using columns-->
      <div class="well">

        <fieldset>
          <legend>Add Your Post Details:</legend>

          <%= form_for :post, :method => "get", :url => { :action => "search", :controller => "songs" }, html: { class: "bs-example form-horizontal" } do |f| %>

            <div class="form-group">
              <div class="col-lg-2">
                <%= f.label :song, :input_html => { :class => "control-label"}  %>
              </div>
              <div class="col-lg-10">
                <%= f.text_field :song, :input_html => { :class => "form-control"} %> *
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-2">
                <%= f.label :title,  :input_html => { :class => "control-label"}  %>
              </div>
              <div class="col-lg-10">
                <%= f.text_field :title, :input_html => { :class => "form-control"} %> *
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-2">
                <%= f.label :motivation, :input_html => { :class => "control-label"}  %>
              </div>
              <div class="col-lg-10">
                <%= f.text_area :motivation, :input_html => { :class => "form-control"}, :cols => 45, :rows => 6 %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                 <%= f.submit "Create Post", :id => "new_button", :class => "btn btn-info" %>
              </div>
            </div>
          <% end %>

          <p>* Required field</p>
        </fieldset>
      </div><!-- end of class="well" -->
    </div><!-- end of class="col-lg-6" -->
    <div class="col-lg-3"></div><!-- empty column for right side of page -->
  </div>  <!-- end of class="row"-->

</div><!-- end of class="container"-->

